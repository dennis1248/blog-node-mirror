<%- include("partials/header.ejs") %>

<div class="content">
  <div class="content_posts">

    <% blogPost.reverse().forEach(function(blogPost) { %>
    <div class="post">
      <table class="info_table">
        <tr>
          <th> <%= blogPost.name %> </th>
          <th> <%= blogPost.date %> </th>
        </tr>
        <tr>
          <td colspan="2"> <%= blogPost.title %> </td>
        </tr>
      </table>
      <hr>
      <table class="post_table">
        <tr>
          <td colspan="2"> <%= blogPost.post %> </td>
        </tr>
      </table>
      <% if (blogPost.link != undefined) { %>
      <% if (blogPost.image != undefined) { %>  <div class="post_container_div_image"> <% } else { %> <div class="post_container_div"> <% } %>
          <a target="_blank" href="<%=blogPost.link%>"><%=blogPost.link%></a>
      </div>
      <%}%>
      <% if (blogPost.image != undefined) { %>
        <img src="<%=blogPost.image%>" alt="Error: Image link incorrect">
      <%}%>
    </div>
    <% }); %>

  </div>
</div>

<%- include("partials/footer.ejs") %>
